    </div>
</div>

<!-- Remove modal -->
<div class="modal fade" id="removeFileModal" tabindex="-1" role="dialog" aria-labelledby="removeFileModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addFileModalLabel">Remove file</h4>
            </div>
            <form action="{{ path("gitphp_main_removefile") }}" method="POST">
                <div class="modal-body">
                    <div class="row">

                        <div class="col-lg-12">
                            <h4>Are you sure you want to delete this file?</h4>
                            <strong><p id="removeFileNameLabel" class="file-name-input"></p></strong>
                            <input id="removeFileNameInput" type="hidden" name="fileName" value="">
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Remove file</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Merge request modal -->
<div class="modal fade" id="mergeRequestModal" tabindex="-1" role="dialog" aria-labelledby="mergeRequestModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addFileModalLabel">Merge request</h4>
            </div>
            <form action="{{ path("gitphp_main_mergerequest") }}" method="POST">
                <div class="modal-body">
                    <div class="row">

                        <div class="col-lg-12">
                            <h4>Source branch</h4>
                            <strong><p id="mergeRequestNameLabel" class="file-name-input"></p></strong>
                            <input id="mergeRequestNameInput" type="hidden" name="sourceBranchName" value="">
                        </div>
                        <div class="col-lg-12">
                            <h4>Destination branch</h4>
                            <select id="branchesListSelect" class="form-control search-multiselect" name="destinationBranchName">
                            </select>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-info">Save merge request</button>
                </div>
            </form>
        </div>
    </div>
</div>